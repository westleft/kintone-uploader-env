{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
